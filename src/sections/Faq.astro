---
import FaqItem from '../components/FaqItem.astro';
import { faqItemData } from '../data/faqItemData';
import SectionTitle from '../components/SectionTitle.astro';
const imgBase = import.meta.env.PUBLIC_IMAGE_BASE;

---

<section id='faq-section' class='p-faq' aria-labelledby='faq-title'>
  <div class='l-container'>
    <SectionTitle id='faq-title' title='よくある質問' />
    <div class='p-faq__items'>
      {
        faqItemData.map((item) => (
          <FaqItem question={item.question} answer={item.answer} index={item.index} />
        ))
      }
    </div>
  </div>

</section>

