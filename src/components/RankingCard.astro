---
import { Image } from 'astro:assets';
const { code, index, title, price, image, rankingTagImage } = Astro.props;
const imgBase = import.meta.env.PUBLIC_IMAGE_BASE;
---

<li class='c-ranking-card splide__slide'>
  <a
    href={`https://www.tea-and-coffee.shop/view/item/${code}`}
    class={`c-ranking-card__frame ${index === 2 ? '_02' : ''}`}
  >
    <div
      class={`c-ranking-card__tag ${index === 4 || index === 5 ? '_side' : ''}`}
    >
      <Image
        src={rankingTagImage}
        alt=''
        loading='lazy'
        decoding='async'
        aria-hidden='true'
      />
    </div>
    <div class='c-ranking-card__image'>
      <Image
        src={image}
        alt={`${title}`}
        decoding='async'
        loading={index === 1 ? 'eager' : 'lazy'}
        fetchpriority={index === 1 ? 'high' : 'auto'}
        width={index === 2 ? 154 : 263}
        height={index === 2 ? 206 : 180}
      />
    </div>
    <h4 class='c-ranking-card__title' set:html={title} />
    <div class='c-ranking-card__line'>
      <img
        src={`${imgBase}/svg/line.svg`}
        alt=''
        loading='lazy'
        decoding='async'
      />
    </div>
    <div class='c-ranking-card__price'>
      <span class='c-ranking-card__price-amount'>&yen;</span>
      {price}<span class='c-ranking-card__price-amount _tax'>(税込)</span>
    </div>
  </a>
</li>
