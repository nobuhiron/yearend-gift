---
const { url, priceLow, priceHigh, index } = Astro.props;
const imgBase = import.meta.env.PUBLIC_IMAGE_BASE;
---
<header class='c-price-title'>
    <div class='c-price-title__icon'>
        <img src={`${imgBase}svg/${url}.svg`} alt='' />
    </div>
  <h3 class='c-price-title__text' set:html={`
    ${priceLow !== '' ? `${priceLow}<span class="c-price-title _small">円〜</span>` : ''}
    ${priceHigh !== '' ? `${priceHigh}<span class="c-price-title _small">円</span>` : ''}
    ${index !== 0 && index !== 3 ? '<br class="is_sm">' : ''}おすすめアイテム
  `}></h3>
</header>
