---
const { id, index, title } = Astro.props;
const imgBase = import.meta.env.PUBLIC_IMAGE_BASE;
---

        <li class='c-nav__item'>
          <a href={`#${id}`} class='c-nav__link'>
            <div class='c-nav-link__image'>
              <img src={`${imgBase}nav_${index}.jpg`} alt='' loading='lazy'/>
            </div>
            <div class='c-nav-link__text'>
              <h3 class='c-nav-link__title' set:html={title}></h3>
              <span class='c-nav-link__arrow'>
              </span>
            </div>
          </a>
        </li>
