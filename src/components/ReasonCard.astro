---
const { index, title, description, imgBase } = Astro.props;
---

<li class='c-reason-card splide__slide'>
  <div class='c-reason-card__heading'>
    <span class='c-reason-card__index'>Reason {index}</span>
    <h3 class='c-reason-card__title'>{title}</h3>
  </div>
  <div class='c-reason-card__image'>
    <img src={`${imgBase}reasons_${index}.jpg`} alt='選ばれる理由' />
  </div>
  <div class='c-reason-card__description'>
    <p class='c-reason-card__description-text'>{description}</p>
    {
      index === '01' && (
        <a href='#' class='c-reason-card__link'>
          {' '}
          詳しく見る{' '}
        </a>
      )
    }
  </div>
</li>
