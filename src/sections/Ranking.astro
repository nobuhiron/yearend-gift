---
import RankingCard from '../components/RankingCard.astro';
import { rankingItemData } from '../data/rankingItemData';
const imgBase = import.meta.env.PUBLIC_IMAGE_BASE;
---

<section id='ranking-section' class='p-ranking' aria-labelledby='ranking-title'>
  <header class='p-ranking__heading'>
    <div class='p-ranking__deco-wrapper'>
      <div class='p-ranking__deco-1'>
        <img
          src={`${imgBase}/svg/ranking-ashirai--1.svg`}
          alt=''
          loading='lazy'
          decoding='async'
        />
      </div>
      <div class='p-ranking__deco-2'>
        <img
          src={`${imgBase}/svg/ranking-ashirai--2.svg`}
          alt=''
          loading='lazy'
          decoding='async'

        />
      </div>
      <div class='p-ranking__deco-3'>
        <img
          src={`${imgBase}/svg/ranking-ashirai--3.svg`}
          alt=''
          loading='lazy'
          decoding='async'

        />
      </div>
      <div class='p-ranking__deco-4'>
        <img
          src={`${imgBase}/svg/ranking-ashirai--4.svg`}
          alt=''
          loading='lazy'
          decoding='async'

        />
      </div>
      <div class='p-ranking__deco-5'>
        <img
          src={`${imgBase}/svg/ranking-ashirai--5.svg`}
          alt=''
          loading='lazy'
          decoding='async'

        />
      </div>
    </div>
    <div class='p-ranking__title-wrapper'>
      <h2 id='ranking-title' class='p-ranking__title visually-hidden'>
        お歳暮・冬ギフトランキング
      </h2>
      <div class='p-ranking__title-img--wrapper _1'>
        <img src={`${imgBase}/svg/ranking_title-1.svg`} alt='' loading='lazy' decoding='async' />
      </div>
      <div class='p-ranking__title-img--wrapper _2'>
        <img src={`${imgBase}/svg/ranking_title-2.svg`} alt='' loading='lazy' decoding='async' />
      </div>
    </div>
  </header>
  <div
    class='splide p-ranking__carousel'
    role='group'
    aria-label='お歳暮・冬ギフトランキング'
  >
    <div class='splide__track'>
      <ul class='splide__list p-ranking__items'>
        {
          rankingItemData.map((item) => (
            <RankingCard
              index={item.index}
              title={item.title}
              price={item.price}
              code={item.code}
            />
          ))
        }
      </ul>
    </div>
    <div class='splide__arrows'>
      <button type='button' class='splide__arrow splide__arrow--prev' aria-label='前へ'>
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='200'
          height='104.501'
          viewBox='0 0 200 104.501'
          ><path
            d='M139.518,267.544A9.545,9.545,0,0,0,133.972,285l36.374,25.285H20.139a9.545,9.545,0,1,0,0,19.09h150.44l-36.742,25.256a9.546,9.546,0,1,0,10.816,15.732l61.808-42.493a9.545,9.545,0,0,0,.04-15.7l-61.633-42.848a9.544,9.544,0,0,0-5.349-1.781Z'
            transform='translate(-10.594 -267.542)'
            fill='#fff'></path></svg
        >
      </button>
      <button type='button' class='splide__arrow splide__arrow--next' aria-label='次へ'>
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='200'
          height='104.501'
          viewBox='0 0 200 104.501'
          ><path
            d='M139.518,267.544A9.545,9.545,0,0,0,133.972,285l36.374,25.285H20.139a9.545,9.545,0,1,0,0,19.09h150.44l-36.742,25.256a9.546,9.546,0,1,0,10.816,15.732l61.808-42.493a9.545,9.545,0,0,0,.04-15.7l-61.633-42.848a9.544,9.544,0,0,0-5.349-1.781Z'
            transform='translate(-10.594 -267.542)'
            fill='#fff'></path></svg
        >
      </button>
    </div>
  </div>
  <div class='p-ranking__gold-line'>
    <img src={`${imgBase}/svg/gold_line.svg`} alt='' loading='lazy'
          decoding='async'
 />
  </div>
</section>
