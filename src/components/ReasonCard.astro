---
import { Image } from 'astro:assets';
const { index, title, description, image } = Astro.props;
---

<li class={`c-reason-card splide__slide _${index}`}>
  <div class='c-reason-card__heading'>
    <span class='c-reason-card__index'>Reason {index}</span>
    <h3 class='c-reason-card__title'>{title}</h3>
  </div>
  <div class='c-reason-card__image'>
    <Image
      src={image}
      alt={`${title}`}
      loading={index === '01' ? 'eager' : 'lazy'}
      decoding='async'
      widths={[510, 765, 1020]}
    />
  </div>
  <div class='c-reason-card__description'>
    <p class='c-reason-card__description-text' set:html={description} />
    {
      index === '01' && (
        <a
          href='https://www.tea-and-coffee.shop/view/page/morihan'
          class='c-reason-card__link'
          target='_blank'
        >
          {' '}
          森半について詳しく見る{' '}
        </a>
      )
    }
  </div>
</li>
