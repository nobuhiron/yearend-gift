---
import FaqItem from '../components/FaqItem.astro';
import { faqItemData } from '../data/faqItemData';
import SectionTitle from '../components/SectionTitle.astro';
const imgBase = import.meta.env.PUBLIC_IMAGE_BASE;

---

<section id='faq-section' class='p-faq' aria-labelledby='faq-heading'>
  <div class='l-container'>
    <SectionTitle id='faq-heading' title='よくある質問' />
    <div class='p-faq__items'>
      {
        faqItemData.map((item) => (
          <FaqItem title={item.title} description={item.description} index={item.index} />
        ))
      }
    </div>
  </div>

</section>

