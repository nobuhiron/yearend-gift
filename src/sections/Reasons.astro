---
import ReasonCard from '../components/ReasonCard.astro';
import { reasonsItemData } from '../data/reasonsItemData';
import SectionTitle from '../components/SectionTitle.astro';
const imgBase = import.meta.env.PUBLIC_IMAGE_BASE;
---



<section
  id='reasons-section'
  class='p-reasons'
  aria-labelledby='reasons-heading'
>
  <SectionTitle
    id='reasons-heading'
    title='森半のギフトが<br class="is_sm">選ばれる理由'
  />
  <div
    class='splide splide2 p-reasons__carousel'
    role='group'
    aria-label='選ばれる理由'
  >
    <div class='splide__track'>
      <ul class='splide__list p-reasons__items'>
        {
          reasonsItemData.map((item) => (
            <ReasonCard
              index={item.index}
              title={item.title}
              description={item.description}
              imgBase={imgBase}
            />
          ))
        }
      </ul>
    </div>
  </div>
</section>
